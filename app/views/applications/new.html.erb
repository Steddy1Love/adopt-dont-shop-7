<h1> New Application </h1>

<%= form_with url: "/applications", method: :post, data: {turbo: false} do |form| %>

    <%= form.label :name, "Name:" %> <br>
    <%= form.text_field :name %> <br>

    <br>

    <%= form.label :street_address, "Street Address:" %> <br>
    <%= form.text_field :street_address %> <br>

    <br>

    <%= form.label :city, "City:" %> <br>
    <%= form.text_field :city %> <br>

    <br>

    <%= form.label :state, "State:" %> <br>
    <%= form.text_field :state %> <br>

    <br>

    <%= form.label :zip_code, "Zip:" %> <br>
    <%= form.text_field :zip_code %> <br>

    <br>

    <%= form.label :description, "Why will this home be a good home for the pet(s)?" %> <br>
    <%= form.text_area :description %> <br>

    <br>
    <%= form.submit "Submit Application" %>
    
<% end %>